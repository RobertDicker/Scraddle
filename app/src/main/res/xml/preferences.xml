<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:id="@+id/editTextCreateNewPlayer"
        android:dialogIcon="@drawable/ic_person_add_black_24dp"
        android:icon="@drawable/ic_person_add_black_24dp"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:positiveButtonText="Create"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Create New Player"
        app:dialogIcon="@drawable/ic_face_black_24dp"
        app:icon="@drawable/ic_face_black_24dp" />

    <Preference
        android:id="@+id/deleteAllDataButton"
        android:icon="@drawable/ic_delete_forever_black_24dp"
        android:key="@string/delete_All"
        android:summary="Warning this will delete all player data"
        android:title="Delete All Data"
        app:icon="@drawable/ic_delete_forever_black_24dp" />
    <MultiSelectListPreference
        android:id="@+id/multiSelectDeleteSelectedPlayers"
        android:defaultValue="@array/player_list"
        android:entries="@array/player_list"
        android:entryValues="@array/player_list"
        android:icon="@drawable/ic_delete_player_black_24dp"
        android:key="multi_select_list_preference_1"
        android:positiveButtonText="Delete"
        android:title="Delete A Player"
        app:dialogIcon="@drawable/ic_delete_player_black_24dp"
        app:icon="@drawable/ic_delete_player_black_24dp" />

</PreferenceScreen>