<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AnagramChecker">

    <EditText
        android:id="@+id/editTextLettersToSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        android:digits="abcdefghijklmnopqrstuvwxyz"
        android:ems="10"
        android:fontFamily="@font/sigmar_one"
        android:hint="@string/anagramEnterTextHint"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLength="@string/maxAnagramLetters"
        android:paddingBottom="8dp"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anagramTextViewNumberOfWords"
        tools:text="word" />

    <ImageView
        android:id="@+id/anagramSortDirectionImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttonripple"
        android:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="@+id/anagramChangeSortButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/anagramChangeSortButton"
        app:srcCompat="@drawable/ic_arrow_down_24dp" />

    <Button
        android:id="@+id/anagramChangeSortButton"
        style="@style/anagramButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttonripple"
        android:backgroundTint="#00BCD4"
        android:text="SORT"
        app:layout_constraintEnd_toStartOf="@+id/anagramSortDirectionImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLettersToSolve">

        <Button
            android:id="@+id/button_allWords"
            style="@style/anagramButton"
            android:backgroundTint="#E91E63"
            android:onClick="solveAnagram"
            android:text="@string/all_words_button"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonTwoWords"
            style="@style/anagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="@string/anagram_button_2" />

        <Button
            android:id="@+id/buttonThree"
            style="@style/anagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8BC34A"
            android:text="@string/anagram_button_3" />

        <Button
            android:id="@+id/buttonFour"
            style="@style/anagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CDDC39"
            android:text="@string/anagram_button_4" />

        <Button
            android:id="@+id/buttonFive"
            style="@style/anagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:text="@string/anagram_button_5" />

        <Button
            android:id="@+id/buttonSix"
            style="@style/anagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:text="@string/anagram_button_6" />

        <Button
            android:id="@+id/buttonSeven"
            style="@style/anagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="@string/anagram_button_7" />

        <Button
            android:id="@+id/buttonEight"
            style="@style/anagramButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#FF5722"
            android:text="@string/anagram_button_8_or_more"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rVWords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anagramChangeSortButton">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBarIndeterminate"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rVWords"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/anagramTextViewNumberOfWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20390942 words" />

</androidx.constraintlayout.widget.ConstraintLayout>